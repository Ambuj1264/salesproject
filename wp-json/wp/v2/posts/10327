>\n    <script>\n    function calculateNPS() {\n        var detractors = 0, promoters = 0, total = 0;\n\n        for (var i = 0; i <= 10; i++) {\n            var count = parseInt(document.getElementById('score_' + i).value) || 0;\n            if (i >= 0 && i <= 6) {\n                detractors += count;\n            } else if (i >= 9 && i <= 10) {\n                promoters += count;\n            }\n            total += count;\n        }\n\n        var nps = total === 0 ? 0 : ((promoters - detractors) \/ total) * 100;\n        updateScoreBadge(nps);\n    }\n\n    function updateScoreBadge(nps) {\n        var scoreBadge = document.getElementById('nps_score_badge');\n        var formattedNps = isFinite(nps) ? nps.toFixed(2) : 'N\/A';\n        scoreBadge.textContent = 'NPS: ' + formattedNps;\n\n        if (nps >= 0 && nps <= 50) {\n            scoreBadge.style.backgroundColor = '#e38107'; \/\/ Yellow\n            scoreBadge.style.color = 'black';\n        } else if (nps > 50) {\n            scoreBadge.style.backgroundColor = '#04c362'; \/\/ Green\n            scoreBadge.style.color = 'white';\n        } else {\n            scoreBadge.style.backgroundColor = '#b7132f'; \/\/ Red\n            scoreBadge.style.color = 'white';\n        }\n    }\n    <\/script>\n    <\/div>\n\t\t\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t\t\t<\/div>\n\t\t","protected":false},"excerpt":{"rendered":"<p>Calculate Your Customer Net Promotor (NPS) Score<\/p>\n","protected":false},"author":1,"featured_media":11511,"comment_status":"open","ping_status":"open","sticky":false,"template":"","format":"standard","meta":{"footnotes":""},"categories":[30],"tags":[],"class_list":["post-10327","post","type-post","status-publish","format-standard","has-post-thumbnail","hentry","category-calculators"],"_links":{"self":[{"href":"https:\/\/salesprofit.in\/wp-json\/wp\/v2\/posts\/10327","targetHints":{"allow":["GET"]}}],"collection":[{"href":"https:\/\/salesprofit.in\/wp-json\/wp\/v2\/posts"}],"abou